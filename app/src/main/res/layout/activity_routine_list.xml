<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일상 더하기"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:id="@+id/routineBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/subtitleText"
        android:layout_marginTop="64dp"
        tools:ignore="NotSibling">


        <androidx.cardview.widget.CardView
            android:id="@+id/readingCardView"
            android:layout_width="375dp"
            android:layout_height="180dp"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="0dp"
            android:backgroundTint="#4B5D">

            <LinearLayout
                android:id="@+id/leftImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                tools:ignore="UseSwitchCompatOrMaterialXml">


                <Switch
                    android:id="@+id/switchButton1"
                    android:layout_width="75dp"
                    android:layout_height="50dp"

                    android:layout_gravity="end"
                    android:text=" " />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"

                    android:contentDescription="Left Icon"
                    android:src="@drawable/ic_app_icons"
                    card_view:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반드시 비타민을 먹어야만..."
                    android:textColor="#451250"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="안 먹으면 좀비가 되....."
                    android:textColor="#451250"
                    android:textSize="14sp" />




            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="0dp"
            android:backgroundTint="#756A">

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:padding="16dp">

                <Switch
                    android:id="@+id/switchButton2"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:text=" " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사인페 미룬이"
                    android:textColor="#231250"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="이제는 더이상 물러날 곳이 없다"
                    android:textColor="#231250"
                    android:textSize="14sp" />



                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Refresh Icon"
                    card_view:tint="#FFFFFF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            android:backgroundTint="#DEEBDF">

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:padding="16dp">

                <Switch
                    android:id="@+id/switchButton3"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:text=" " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="객체지향프로그래밍 과제"
                    android:textColor="#504912"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="재웅이 과제는 뤼튼이 하는 중"
                    android:textColor="#504912"
                    android:textSize="14sp" />



                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Refresh Icon"
                    card_view:tint="#FFFFFF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>


    <ImageButton
        android:id="@+id/new_Button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#F0F0F0"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_plus_icon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:contentDescription="image_button"/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@id/searchButton"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/titleText"
        android:text="search" />

</RelativeLayout>